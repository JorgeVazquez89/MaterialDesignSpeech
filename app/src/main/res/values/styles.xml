<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="introStyle">
        <item name="android:fontFamily">@font/osaka</item>
        <item name="android:textSize">70sp</item>
        <item name="android:textColor">#EAF9E0</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
        <item name="android:text">SHER</item>
    </style>

    <style name="adapterHeaderStyle">
        <item name="android:fontFamily">@font/osaka</item>
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">#3AA402</item>
        <item name="android:textAlignment">center</item>
    </style>


    <style name="cardViewHeaderTextStyle">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">#0E3F00</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
        <item name="android:background">#FFFFFFFF</item>
    </style>

    <style name="cardViewStyle">
        <item name="android:layout_margin">20dp</item>
        <item name="android:background">#4CFFFFFF</item>
    </style>

    <style name="cardViewTitleStyle">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

</resources>
